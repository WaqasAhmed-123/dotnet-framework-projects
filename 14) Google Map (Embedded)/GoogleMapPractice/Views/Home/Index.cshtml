@{ 
    ViewBag.Title = "Index";
    Layout = null;
}

<html>
<head>
    <title>Google Map Embedded</title>
</head>
<body>

    <h1 align="center">Google Map Embedded</h1>
    <form action="@Url.Action("Index","Home")" method="post" align="right">
        <label>Address:</label>
        <input type="text" required name="Location" />
        <input type="submit" value="Search" />
    </form>
    <!--Google Map Frame-->
    <div style="">
        <iframe style="width:100%; height:600px" src="https://maps.google.com/maps?hl=en&amp;q= @ViewBag.Location &amp;ie=UTF8&amp;t=&amp;z=14&amp;iwloc=B&amp;output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div>
    <!--Google Map Frame-->
</body>
</html>