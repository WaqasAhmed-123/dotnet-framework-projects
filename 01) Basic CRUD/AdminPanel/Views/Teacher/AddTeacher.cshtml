@model AdminPanel.Models.Teacher

@{
    ViewBag.Title = "AddTeacher";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}


<div class="row">
    <form action="" method="post">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                
                <div class="panel panel-flat">
                    <div class="panel-heading">

                        <div class="text-left" style="display:@ViewBag.CssVal; position:absolute; background-color:deeppink; padding:5px;
                                    color:white; font-weight:bold">
                            All Fields are Required!!
                        </div>
                        <h5 class="panel-title" align="center"><u>New Teacher</u></h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">

                        <div class="form-group">
                            <label>First Name :</label>
                            <input type="text" class="form-control" placeholder="Waqas" name="fname" value="@TempData["fn"]">
                        </div>

                        <div class="form-group">
                            <label>Last Name :</label>
                            <input type="text" class="form-control" placeholder="Ahmed" name="lname" value="@TempData["ln"]">
                        </div>

                        <div class="form-group">
                            <label>E-Mail :</label>
                            <input type="text" class="form-control" placeholder="waqas@gmail.com" name="email" value="@TempData["em"]">
                        </div>


                        <div class="form-group">
                            <label>Age :</label>
                            <input type="number" class="form-control" min="0" placeholder="25" name="age"
                                   value="0">
                        </div>

                        <div class="form-group">
                            <label>Address :</label>
                            <br />
                            <textarea name="address" cols="156" rows="4" style="resize:none;">@TempData["ad"]</textarea>
                        </div>





                        <div class="text-left" style="display:@ViewBag.CssVal1; position:absolute; background-color:green; padding:5px;
                                    color:white; font-weight:bold">
                            Teacher Add Successfully!!
                        </div>

                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Add Teacher <i class="icon-database-insert position-right"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

