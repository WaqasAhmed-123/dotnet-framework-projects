
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
</head>
<body>
    <div class="row">
        <form action="@Url.Action("PostRegistration", "Auth")" method="post">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">

                    <div class="panel panel-flat">
                        <div class="panel-heading">

                            <div class="text-left" style="position:absolute; padding:5px;
                                    color:red; font-weight:bold">
                                @ViewBag.message
                            </div>
                           
                            <h5 class="panel-title" align="center"><u>Signup</u></h5>
                            
                        </div>

                        <div class="panel-body">


                            <div class="form-group">
                                <label>Name :</label>
                                <input type="text" class="form-control" required name="Name">
                            </div>
                            <br />

                            <div class="form-group">
                                <label>Contact :</label>
                                <input type="text" class="form-control" required name="Contact">
                            </div>
                            <br />

                            <div class="form-group">
                                <label>Email :</label>
                                <input type="email" class="form-control" required name="Email">
                            </div>
                            <br />

                            <div class="form-group">
                                <label>Address :</label>
                                <input type="text" class="form-control" required name="Address">
                            </div>
                            <br />

                            <div class="form-group">
                                <label>Role :</label>
                                <Select class="form-control" required name="Role">
                                    <option value="">Select One</option>
                                    <option value="1">Admin</option>
                                    <option value="2">User</option>
                                </Select>
                            </div>
                            <br />

                            <div class="form-group">
                                <label>Password :</label>
                                <input type="text" class="form-control" required name="Password">
                            </div>
                            <br />



                            <div class="text-right">
                                <button type="submit" >Register</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
