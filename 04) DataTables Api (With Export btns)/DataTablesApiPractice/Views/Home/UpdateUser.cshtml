
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<!DOCTYPE html>

<div class="row">
    <form action="@Url.Action("PostUpdateUser", "Home")" method="post">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">

                <div class="panel panel-flat">
                    <div class="panel-heading">

                        <div class="text-left" style="position:absolute; padding:5px;
                                    color:red; font-weight:bold">
                            @ViewBag.message
                        </div>
                        <h5 class="panel-title" align="center"><u>Update Teacher</u></h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="collapse"></a></li>
                                <li><a data-action="reload"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">

                        <div class="form-group">
                            <input type="hidden" class="form-control" required name="Id" value="@ViewBag.ulist.Id">
                        </div>

                        <div class="form-group">
                            <input type="hidden" class="form-control" required name="CreatedAt" value="@ViewBag.ulist.CreatedAt">
                        </div>

                        <div class="form-group">
                            <label>Name :</label>
                            <input type="text" class="form-control" required name="Name" value="@ViewBag.ulist.Name">
                        </div>

                        <div class="form-group">
                            <label>Contact :</label>
                            <input type="text" class="form-control" required name="Contact" value="@ViewBag.ulist.Contact">
                        </div>

                        <div class="form-group">
                            <label>Email :</label>
                            <input type="text" class="form-control" required name="Email" value="@ViewBag.ulist.Email">
                        </div>


                        <div class="form-group">
                            <label>Role :</label>
                            <select class="form-control" required name="Role">
                                @if (ViewBag.ulist.Role == 1)
                                {
                                    <option value="">Select One</option>
                                    <option value="1" selected>System Admin</option>
                                    <option value="2">System User</option>
                                }
                                else
                                {
                                    <option value="">Select One</option>
                                    <option value="1">System Admin</option>
                                    <option value="2" selected>System User</option>
                                }
                            </select>
                        </div>


                        <div class="form-group">
                            <label>Password :</label>
                            <input type="text" class="form-control" required name="Password" value="@ViewBag.ulist.Password">
                        </div>


                        <div class="text-right">
                            <button type="submit" class="btn btn-primary">Update <i class="icon-database-insert position-right"></i></button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>
